<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mt-4 mx-auto">
      <h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a
          href="{{restaurant.google_map}}"
          class="text-secondary"
          target="_blank"
        >
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        <span class="text-secondary">
          <i class="fa-sharp fa-solid fa-comment"></i>
          簡介：
        </span>
        {{restaurant.description}}
      </p>

      <img
        class="rounded mx-auto d-block mb-4 w-100"
        src="{{restaurant.image}}"
        style="max-width: 600px;"
      />
    </div>
  </div>
</div>